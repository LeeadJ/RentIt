<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="Post title" />

        <TextView
            android:id="@+id/postCategoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postTitleTxt"
            android:layout_centerHorizontal="true"
            android:text="Post category"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/postNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postCategoryTxt"
            android:layout_centerHorizontal="true"
            android:text="Post name"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/postNameTxt"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>